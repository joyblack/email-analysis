<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sunrun.emailanalysis.mapper.TaskMapper" >
  <resultMap id="BaseResultMap" type="com.sunrun.emailanalysis.po.Task" >
    <id column="task_id" property="taskId" jdbcType="BIGINT" />
    <result column="task_name" property="taskName" jdbcType="VARCHAR" />
    <result column="case_id" property="caseId" jdbcType="BIGINT" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="type" property="type" jdbcType="VARCHAR" />
    <result column="task_state" property="taskState" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    task_id, task_name, case_id, update_time, type, task_state
  </sql>

  <update id="updateTaskState">
      update ea_task set task_state = #{taskState} where task_id = #{taskId}
  </update>

  <select id="getTaskByCaseIdAndType" resultType="com.sunrun.emailanalysis.po.Task">
      select * from ea_task where case_id = #{caseId} and type = #{type} limit 1;
  </select>

</mapper>